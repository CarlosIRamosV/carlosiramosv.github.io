---

<footer
  class="mt-20 bg-white/80 dark:bg-gray-900/90 backdrop-blur-md border-t border-slate-900/10 dark:border-slate-300/10"
>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Columna 1: Información Personal -->
        <div class="flex flex-col items-center md:items-start space-y-4">
          <div class="flex flex-col items-center md:items-start">
            <span
              class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-cyan-600 bg-clip-text text-transparent"
            >
              Carlos Ramos
            </span>
            <p
              class="mt-2 text-sm text-gray-600 dark:text-gray-400 text-center md:text-left"
            >
              Ingeniero en Sistemas con
              <br />
              Especialidad en Ciberseguridad
            </p>
          </div>
          <div class="flex space-x-4">
            {
              socialLinks.map(({ name, url, icon }) => (
                <a
                  href={url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-500 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400 transition-all duration-300 hover:scale-110"
                  aria-label={name}
                >
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <Fragment set:html={icon} />
                  </svg>
                </a>
              ))
            }
          </div>
        </div>

        <!-- Columna 2: Navegación -->
        <div class="flex flex-col items-center md:items-start">
          <h3
            class="text-sm font-semibold text-gray-900 dark:text-gray-100 uppercase tracking-wider mb-4"
          >
            Navegación
          </h3>
          <ul class="space-y-3">
            {
              navigationLinks.map(({ name, href }) => (
                <li>
                  <a
                    href={href}
                    class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300"
                  >
                    {name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- Columna 3: Contacto -->
        <div class="flex flex-col items-center md:items-start">
          <h3
            class="text-sm font-semibold text-gray-900 dark:text-gray-100 uppercase tracking-wider mb-4"
          >
            Contacto
          </h3>
          <div class="space-y-3 text-center md:text-left">
            <p class="text-gray-600 dark:text-gray-400">
              <span class="font-medium">Ubicación:</span>
              <br />
              Chihuahua, México
            </p>
            <p class="text-gray-600 dark:text-gray-400">
              <span class="font-medium">Email:</span>
              <br />
              carlos@carlosiramosv.com
            </p>
          </div>
        </div>
      </div>

      <!-- Copyright -->
      <div class="pt-8 mt-8 border-t border-gray-200 dark:border-gray-800">
        <p class="text-center text-sm text-gray-600 dark:text-gray-400">
          © {currentYear} Carlos Ramos. Todos los derechos reservados.
        </p>
      </div>
    </div>
  </div>
</footer>
