---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const socialLinks = [
  {
    name: "GitHub",
    url: "https://github.com/tu-usuario",
    icon: "github", // Puedes usar un sistema de íconos como heroicons
  },
  {
    name: "LinkedIn",
    url: "https://linkedin.com/in/tu-perfil",
    icon: "linkedin",
  },
  {
    name: "Email",
    url: "mailto:tu@email.com",
    icon: "mail",
  },
  // Agrega más redes sociales según necesites
];
---

<div class:list={["flex gap-4", className]}>
  {
    socialLinks.map(({ name, url }) => (
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
        aria-label={`Visitar ${name}`}
      >
        {name}
      </a>
    ))
  }
</div>
